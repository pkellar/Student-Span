@model StudentSpan.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Student Organizer";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>


<p>
    <a asp-action="Create">Add New Student</a>
</p>
<form asp-controller="Student" asp-action="Index" method="get">
    <pre>
            FirstName: <input type="text" name="searchModel.FirstName" />    LastName: <input type="text" name="searchModel.LastName" />
            GradMonth: <input type="text" name="searchModel.GradMonth" />    GradYear: <input type="text" name="searchModel.GradYearTo" />
            Degree:    <input type="text" name="searchModel.Degree" />      School: <input type="text" name="searchModel.School" />
            <input type="submit" value="Filter" />
    </pre>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Descending Order: First Name", "Index", new { sortOrder = "first_desc" })
            </th>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortOrder = "last_desc" })
            </th>
            <th>
                @Html.ActionLink("Grad Month", "Index", new { sortOrder = "Month" })
            </th>
            <th>
                @Html.ActionLink("Grad Year", "Index", new { sortOrder = "year_desc" })
            </th>
            <th>
                @Html.ActionLink("Degree", "Index", new { sortOrder = "degree_desc" })
            </th>
            <th>
                @Html.ActionLink("School", "Index", new { sortOrder = "school_desc" })
            </th>
            <th>
            <th></th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Ascending Order: First Name", "Index", new { sortOrder = "first" })
            </th>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortOrder = "last" })
            </th>
            <th>
                @Html.ActionLink("Grad Month", "Index", new { sortOrder = "month_desc" })
            </th>
            <th>
                @Html.ActionLink("Grad Year", "Index", new { sortOrder = "Year" })
            </th>
            <th>
                @Html.ActionLink("Degree", "Index", new { sortOrder = "Degree" })
            </th>
            <th>
                @Html.ActionLink("School", "Index", new { sortOrder = "School" })
            </th>
            <th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradMonth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.School)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="WatchPage" asp-route-id="@item.Id">Watch</a> |
                    <a style="color:red;" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
